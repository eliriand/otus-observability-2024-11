global:
  scrape_interval: 5s
scrape_configs:
  - job_name: 'prometheus_master'
    static_configs:
      - targets: ['localhost:9090']
  - job_name: 'node-metrics'
    metrics_path: /proxy
    params:
      module:
        - node
    static_configs:
      - targets: ['10.0.0.5:9999']
  - job_name: 'nginx-metrics'
    metrics_path: /proxy
    params:
      module:
        - nginx
    static_configs:
      - targets: ['10.0.0.5:9999']
  - job_name: 'php-fpm-metrics'
    metrics_path: /proxy
    params:
      module:
        - php-fpm
    static_configs:
      - targets: ['10.0.0.5:9999']
  - job_name: 'mysql-metrics'
    metrics_path: /proxy
    params:
      module:
        - mysql
    static_configs:
      - targets: ['10.0.0.5:9999']
  - job_name: 'blackbox-exporter-metrics'
    metrics_path: /proxy
    params:
      module:
        - blackbox-stats
    static_configs:
      - targets: ['10.0.0.5:9999']
  - job_name: 'blackbox'
    metrics_path: /proxy
    params:
      module:
        - blackbox-probe
    static_configs:
      - targets:
          - http://10.0.0.5:80
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: 10.0.0.5:9999